<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:vm="http://www.mulesoft.org/schema/mule/vm" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:core="http://www.mulesoft.org/schema/mule/core" version="CE-3.2.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd 
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd ">
    <flow name="mediation-denormalization-getpatientFlow" doc:name="mediation-denormalization-getpatientFlow">
        <vm:inbound-endpoint exchange-pattern="request-response" path="getPatientDe-NormalizationQueue" responseTimeout="10000" mimeType="text/plain" doc:name="Read from queue"/>
        <choice doc:name="Choice">
            <when expression="return false;" evaluator="groovy">
                <processor-chain>
                    <logger message="De-normailize for mock service provider" level="INFO" doc:name="Log De-normailize for mock service provider"/>
                    <vm:outbound-endpoint exchange-pattern="request-response" path="getPatient-De-normailization-MockServiceProvider" responseTimeout="10000" mimeType="text/plain" doc:name="Send to getPatient-De-normailization-MockServiceProvider"/>
                </processor-chain>
            </when>
            <when expression="return true;" evaluator="groovy">
                <processor-chain>
                    <logger message="De-normailize for OpenEMPI" level="INFO" doc:name="Log De-normailize for OpenEMPI"/>
                    <vm:outbound-endpoint exchange-pattern="request-response" path="getPatient-De-normailization-OpenEMPI" responseTimeout="10000" mimeType="text/plain" doc:name="Send to getPatient-De-normailization-OpenEMPI"/>
                </processor-chain>
            </when>
        </choice>
    </flow>
</mule>
