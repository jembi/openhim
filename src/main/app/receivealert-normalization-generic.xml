<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:vm="http://www.mulesoft.org/schema/mule/vm" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:core="http://www.mulesoft.org/schema/mule/core" version="CE-3.2.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd 
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd ">
    <flow name="mediation-normalization-receivealert-genericFlow" doc:name="mediation-normalization-receivealert-genericFlow">
        <vm:inbound-endpoint exchange-pattern="request-response" path="receiveAlert-Generic-NormalizationQueue" responseTimeout="10000" mimeType="text/plain" doc:name="Read from queue"/>
        <logger message="Normalizing a generic receive alert transaction: #[groovy:return message.toString();] with payload #[groovy:return message.payload.toString();]" level="INFO" doc:name="Logger"/>
        <custom-transformer class="org.jembi.heal.DoNothingTransformer" doc:name="On-ramp Transformer"/>
        <custom-transformer class="org.jembi.heal.DoNothingTransformer" doc:name="Validation Transformer"/>
        <custom-transformer class="org.jembi.heal.DoNothingTransformer" doc:name="Enrichment Tranformer"/>
        <custom-transformer class="org.jembi.heal.DoNothingTransformer" doc:name="Translation Transformer"/>
        <response>
            <logger message="Responce de-normalization" level="INFO" doc:name="Logger"/>
            <custom-transformer class="org.jembi.heal.DoNothingTransformer" doc:name="Off-ramp Transformer"/>
        </response>
        <vm:outbound-endpoint exchange-pattern="request-response" path="receiveAlertOrchestrationQueue" responseTimeout="10000" mimeType="text/plain" doc:name="Send to receiveAlertOrchestrationQueue"/>
    </flow>
</mule>
